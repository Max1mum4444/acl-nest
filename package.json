{
  "name": "acl-nest",
  "version": "1.3.0",
  "description": "ACL nestjs module functionality using casbin package",
  "scripts": {
    "test": "jest --collect-coverage",
    "eslint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "eslint:fix": "eslint ./src/** --fix --no-error-on-unmatched-pattern",
    "eslint:fix:dry": "eslint ./src/** --fix-dry-run --no-error-on-unmatched-pattern",
    "build": "tsc --project ./tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twiddlle/acl-nest.git"
  },
  "main": "index.js",
  "keywords": [
    "acl",
    "casbin",
    "nest",
    "guard",
    "permission",
    "access control",
    "nestjs"
  ],
  "author": "Vladimir Durana",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "express": "^4.17.1",
    "jest": "^27.0.6",
    "rxjs": "^6.5.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "peerDependencies": {
    "@nestjs/common": ">=7",
    "@nestjs/core": ">=7",
    "rxjs": ">=6.5.1"
  },
  "dependencies": {
    "casbin": "^5.11.0",
    "reflect-metadata": "^0.1.13"
  }
}
