{
  "name": "acl-nest",
  "version": "1.2.0",
  "description": "ACL nestjs module functionality using casbin package",
  "scripts": {
    "test": "jest --collect-coverage",
    "eslint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "eslint:fix": "eslint ./src/** --fix --no-error-on-unmatched-pattern",
    "eslint:fix:dry": "eslint ./src/** --fix-dry-run --no-error-on-unmatched-pattern",
    "build": "tsc --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twiddlle/acl-nest.git"
  },
  "main": "index.js",
  "keywords": [
    "acl",
    "casbin",
    "nest",
    "guard",
    "permission",
    "access control",
    "nestjs"
  ],
  "author": "Vladimir Durana",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/platform-express": "^7.6.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "supertest": "^6.1.4",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.0.4",
    "@nestjs/core": "^8.0.4",
    "casbin": "^5.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  }
}
