{
  "name": "acl-nest",
  "version": "1.0.0",
  "description": "ACL nestjs module functionality using casbin package",
  "scripts": {
    "test": "jest --collect-coverage",
    "eslint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "eslint:fix": "eslint ./src/** --fix --no-error-on-unmatched-pattern",
    "eslint:fix:dry": "eslint ./src/** --fix-dry-run --no-error-on-unmatched-pattern",
    "build": "tsc --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twiddlle/acl-nest.git"
  },
  "main": "index.js",
  "keywords": [
    "platform",
    "core",
    "nestjs"
  ],
  "author": "Vladimir Durana",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/platform-express": "^7.6.5",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^6.4.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "casbin": "^5.6.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  }
}
